<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_view_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_member">


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/active_fab"
        android:layout_width="305dp"
        android:layout_height="118dp"
        android:layout_marginTop="100dp"
        android:contentDescription="See Members"
        android:text="Active Members"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:backgroundTint="@color/wheat"
        app:icon="@drawable/peope_icon"
        app:iconSize="45dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/overdue_fab"
        android:layout_width="305dp"
        android:layout_height="118dp"
        android:text="Overdue Members"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:contentDescription="See Members"
        app:backgroundTint="@color/wheat"
        app:icon="@drawable/peope_icon"
        app:iconSize="45dp"
        app:iconTint="@color/crimson"
        app:layout_constraintTop_toBottomOf="@id/active_fab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Fixed Add FAB at Bottom End -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/add_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Member"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        android:contentDescription="Add Member"
        app:backgroundTint="@color/wheat"
        app:icon="@drawable/baseline_add_circle_24"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
